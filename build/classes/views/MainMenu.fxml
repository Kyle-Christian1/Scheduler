<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MainMenuController">
   <children>
      <Label layoutX="140.0" layoutY="45.0" text="Main Menu">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <VBox layoutY="125.0" prefHeight="200.0" prefWidth="400.0" spacing="10.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleCustomersBtn" prefHeight="100.0" prefWidth="200.0" text="Customers" />
                  <Button mnemonicParsing="false" onAction="#handleAppointmentsBtn" prefHeight="100.0" prefWidth="200.0" text="Appointments" />
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleCalendarBtn" prefHeight="100.0" prefWidth="200.0" text="Reports" />
                  <Button mnemonicParsing="false" onAction="#handleLogsBtn" prefHeight="100.0" prefWidth="200.0" text="Logs" />
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="exitBtn" layoutX="300.0" layoutY="342.0" mnemonicParsing="false" onAction="#handleExitBtn" prefHeight="25.0" prefWidth="80.0" text="Exit" />
   </children>
</AnchorPane>
